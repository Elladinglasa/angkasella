<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
     <ImageView
        android:src="drawable/ic_menu_gallery"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:layout_marginLeft="16.0dp"
        android:layout_marginTop="15.0dp"
        android:background="@drawable/arrowl" />
    <ImageView
        android:src="drawable/ic_menu_gallery"
        android:layout_width="785px"
        android:layout_height="800px"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/imageView1"
        android:background="@drawable/fourth"
        android:layout_marginTop="0.0dp" />
    <ImageView
        android:src="drawable/ic_menu_gallery"
        android:layout_width="50dp"
        android:layout_height="8dp"
        android:id="@+id/imageView2"
        android:background="@drawable/ellipseee"
        android:layout_gravity="center"
        android:layout_marginTop="7.0dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Button -->
        <Button
            android:id="@+id/signup_button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Get Started"
             android:textSize="12sp"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp" 
            android:textAllCaps="false" />
   </FrameLayout>



</LinearLayout> 